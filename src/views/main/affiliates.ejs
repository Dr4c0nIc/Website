                <span class="partnerName" title="${partner.description}">${partner.name}</span><br>
                <span class="partnerDesc">${partner.type}</span>
                <div class="links">
                    ${website ?  `<a class="fas fa-globe link" href="${website.url}"></a>` : ""}    
                    ${discord ?  `<a class="fab fa-discord link" href="${discord.url}"></a>` : ""}    
