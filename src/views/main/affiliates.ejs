            discord = partner.links?.filter(x => x.type == "discord")[0];

        $(".partners").append(`
            <div class="partner" style="border:.2vh solid rgba(${Math.floor(Math.random() * 255)},${Math.floor(Math.random() * 255)},${Math.floor(Math.random() * 255)}, 1)")>
